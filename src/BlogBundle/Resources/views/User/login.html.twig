{% extends "BlogBundle::layout.html.twig" %}
{% block content %}

    {% if is_granted("ROLE_USER") %}
        <strong>Estas logado com o usuario normal</strong>
    {% endif %}

    {% if is_granted("ROLE_ADMIN") %}
        <strong>Estas logado com o usuario administrador</strong>
    {% endif %}

    <div class="col-lg-4">
        <h2>Identificate</h2>
        <hr/>

        <form action="{{ path("login_check") }}" method="post">
            <label for="_username">Email</label>
            <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            <label for="_password">Contrase√±a</label>
            <input type="password" id="password" name="_password" value="" class="form-control"/>
            <input type="submit" value="Entrar" class="btn-success">
            <input type="hidden" name="_target_path" value="/login">
        </form>
    </div>
    <div class="clearfix"></div>
{% endblock %}